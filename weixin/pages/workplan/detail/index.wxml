<view class="page">
  <view class="page__bd">
    <wux-wing-blank size="default">
      <wux-card bordered="{{ false }}" title="{{plan.content}}">
        <view slot="body">
          <wux-row class="rowheight">
            <wux-col span="3">
              <view>执行时间:</view>
            </wux-col>
            <wux-col>
              <view class="content">{{plan.startTime}}至{{plan.endTime}}</view>
            </wux-col>
          </wux-row>
          <wux-row class="rowheight">
            <wux-col span="3">
              <view>活动地址:</view>
            </wux-col>
            <wux-col>
              <view class="content">{{plan.addr}}</view>
            </wux-col>
          </wux-row>
          <wux-row class="rowheight">
            <wux-col span="3">
              <view>参与人:</view>
            </wux-col>
            <wux-col>
              <view class="content">{{plan.canyuren}}</view>
            </wux-col>
          </wux-row>
          <wux-row class="rowheight">
            <wux-col span="3">
              <view>营销目标:</view>
            </wux-col>
            <wux-col>
              <view class="content">{{plan.target}}人</view>
            </wux-col>
          </wux-row>
          <wux-row class="rowheight">
            <wux-col span="3">
              <view>完成目标:</view>
            </wux-col>
            <wux-col>
              <view class="content">10人</view>
            </wux-col>
          </wux-row>
        </view>
      </wux-card>
    </wux-wing-blank>
    <view class="line"></view>
    <wux-wing-blank size="default">
      <wux-card bordered="{{ false }}" title="执行记录" class="rowheight">
        <view slot="body">
          <view></view>
        </view>
      </wux-card>
    </wux-wing-blank>
    <button bindtap='progress' style="" class='btn' hover-class='btn_hover'>执行进度</button>
    <button style="margin-top:10px">更多操作</button>

  </view>
</view>